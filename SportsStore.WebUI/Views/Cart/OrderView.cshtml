@model SportsStore.Domain.Models.Cart

<div class="action-title">Order confirmation</div>

@if (Model.Lines?.Count() == 0)
{
    <div class="action-title"><h4>Your cart is empty.</h4></div>
}
else
{
    /*
     contact information
     */
    //if registered user
    using (Html.BeginForm("SubmitOrder", "Cart"))
    {
        <div class="form-group col-xs-7 user-info">
            <div class="form-group">
                <label>First Name:</label>
                <input type="text" name="firstName" class="form-control" required/>
            </div>
            <div class="form-group">
                <label>Last Name:</label>
                <input type="text" name="lastName" class="form-control" required/>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" name="email" class="form-control" required/>
            </div>
            <div class="form-group">
                <label>Phone Number:</label>
                <input type="tel" name="phoneNumber" class="form-control" maxlength="13" required/>
            </div>
        </div>
        <div class="clearfix"></div>
        <input type ="submit" class="btn btn-warning btn-lg pull-right" value="Submit" />
    }    
}
