@using SportsStore.Domain.Models;
@model System.Collections.Generic.IEnumerable<Category>

@Html.ActionLink("All", "List", "Product", null, new { @class = "btn btn-block btn-default btn-lg category" })

@foreach(var cat in @Model)
{
    @Html.RouteLink(cat.Name, new {
    controller = "Product",
    action = "List",
    category = cat.Name,
    page = 1 },
    new {
        @class = "btn btn-block btn-default btn-lg category" + (cat.Name == ViewBag.SelectedCategory ? " category-selected" : "")
    })
}
