@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-3.1.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/scripts/additional.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet"/>
    <link href="~/Content/Site.css" rel="stylesheet"/>
    <title></title>
</head>
<body>
    <header class="navbar navbar-fixed-top admin-header">
        <div id="admin-header-title">
            Admin: @User.Identity.Name
            @if (User.Identity.IsAuthenticated)
            {
                <a href="@Url.Action("Logout", "Account")" class="btn pull-right" id="logout-link"><span class="glyphicon glyphicon-log-out"></span> Log Out</a>
            }
        </div>
        
    </header>

    <div class="row">
        <div class="container admin-body">
            @RenderBody()
        </div>
    </div>
</body>
</html>
